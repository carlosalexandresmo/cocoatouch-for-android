<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BAB8">

    <com.hummingbird.cocoatouch.uikit.UILabel
        android:id="@+id/tutorial1_lb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I hope this also helps you. Do you want to create the next billion dollar app? Contact me:"
        android:textSize="28sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"/>

    <com.hummingbird.cocoatouch.uikit.UILabel
        android:layout_below="@+id/tutorial1_lb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rafael.castro@hummingbird.com.br"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"/>

</RelativeLayout>
