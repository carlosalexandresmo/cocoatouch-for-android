<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainController"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXAMPLES:"
            android:layout_gravity="center"
            android:id="@+id/textView"
            android:layout_marginTop="44dp"/>

        <com.hummingbird.cocoatouch.uikit.UIButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutorial"
            android:id="@+id/main_tutorial"/>

        <com.hummingbird.cocoatouch.uikit.UIButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transitions"
            android:id="@+id/main_transition"/>

        <com.hummingbird.cocoatouch.uikit.UIButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TableView"
            android:id="@+id/main_tableview"/>

        <com.hummingbird.cocoatouch.uikit.UIButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom Objects"
            android:id="@+id/main_customobjects"/>

        <com.hummingbird.cocoatouch.uikit.UIButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share and Login"
            android:id="@+id/main_share"/>

        <com.hummingbird.cocoatouch.uikit.UIButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alerts and Selections"
            android:id="@+id/main_alert"/>

        <com.hummingbird.cocoatouch.uikit.UIButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextField"
            android:id="@+id/main_text"/>

    </LinearLayout>

    <com.hummingbird.cocoatouch.uikit.UILabel
        android:id="@+id/owner_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created by Rafael Castro"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
